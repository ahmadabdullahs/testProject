<h1><span style="font-weight: bold; font-style: italic; color: #808080; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);">Detail of Project</span></h1>

<div class="mb-3">
  <%= link_to 'Bugs', project_bugs_path(@project), class: 'btn btn-info' %>
</div>

<table class="table table-bordered table-striped">
  <thead class="thead-light">
    <tr>
      <th colspan="2" class="text-center">
        <h3><%= "Project Name: " + @project.name %></h3>
      </th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Created by (Manager)</td>
      <td><%= @project.manager.name %></td>
    </tr>
    <tr>
      <td>Developers</td>
      <td><%= @project.developers.pluck(:name).join(',  ') %></td>
    </tr>
    <tr>
      <td>QA Testers</td>
      <td><%= @project.qas.pluck(:name).join(',  ') %></td>
    </tr>
  </tbody>
</table>




<div class="container mt-4">
  <table class="table table-bordered">
  </table>
  <div class="text-left">
    <%= link_to 'Back to Project', projects_path, class: 'btn btn-primary mt-3' %>
  </div>
</div>

