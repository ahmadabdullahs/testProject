<div class="signup-container">
  <h2 class="signup-title">Sign up</h2>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "signup-form" }) do |f| %>
    <!-- Render error messages at the top -->
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="form-group">
      <%= f.label :name, class: "form-label" %>
      <%= f.text_field :name, class: "form-input" %>
      <% if resource.errors[:name].any? %>
        <p class="text-danger"><%= resource.errors[:name].join(", ") %></p>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :email, class: "form-label" %>
      <%= f.email_field :email, class: "form-input" %>
      <% if resource.errors[:email].any? %>
        <p class="text-danger"><%= resource.errors[:email].join(", ") %></p>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :user_type, class: "form-label" %>
      <%= f.select :user_type, ["manager", "developer", "qa"], {}, class: "form-input" %>
      <% if resource.errors[:user_type].any? %>
        <p class="text-danger"><%= resource.errors[:user_type].join(", ") %></p>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password, class: "form-label" %>
      <% if @minimum_password_length %>
        <em class="password-minimum">(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, class: "form-input", autocomplete: "new-password" %>
      <% if resource.errors[:password].any? %>
        <p class="text-danger"><%= resource.errors[:password].join(", ") %></p>
      <% end %>
    </div>

    <div class="form-group">
      <%= f.label :password_confirmation, class: "form-label" %>
      <%= f.password_field :password_confirmation, class: "form-input", autocomplete: "new-password" %>
      <% if resource.errors[:password_confirmation].any? %>
        <p class="text-danger"><%= resource.errors[:password_confirmation].join(", ") %></p>
      <% end %>
    </div>

    <div class="form-actions">
      <%= f.submit "Sign up", class: "btn btn-primary btn-block" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>

